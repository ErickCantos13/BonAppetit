<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="erick.cantos">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ErickActivity1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ErickActivity2"
            android:label="@string/firstname_string"
            android:parentActivityName=".ErickActivity1">

            <!-- Specify	the	parent	Activity - UP ARROW FUNCTIONALITY -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ErickActivity1" />
        </activity>
        <activity android:name=".ErickActivity3"
            android:parentActivityName=".ErickActivity1"/>
        <activity android:name=".ErickActivity4"
            android:parentActivityName=".ErickActivity1"/>
        <activity android:name=".ErickActivity5" />
        <activity android:name=".ErickActivity6"></activity>
    </application>

</manifest>